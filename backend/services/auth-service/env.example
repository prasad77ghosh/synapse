# Auth Service environment example
# Copy to .env and edit values for your environment

# Service port
PORT=3001

# Postgres (if used by auth service)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=app_user
POSTGRES_PASSWORD=app_password
POSTGRES_DB=app_db

# Redis (cache, sessions)
REDIS_HOST=localhost
REDIS_PORT=6379

# Kafka bootstrap for services running on host (compose maps external to 29092)
KAFKA_BROKERS=localhost:29092

# JWT config
JWT_SECRET=change_me_secure_jwt_secret
JWT_EXPIRES_IN=3600s

# Path to generated proto files (relative)
PROTO_PATH=../../proto
