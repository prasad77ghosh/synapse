# Notification Service environment example
# Copy to .env and edit values for your environment

# Service port
PORT=3003

# Kafka bootstrap (use localhost:29092 for services running on host)
KAFKA_BROKERS=localhost:29092

# Redis (optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# SMTP (email provider) - fill with your SMTP server details if used
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password

# Twilio (SMS) - fill if SMS notifications are used
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
